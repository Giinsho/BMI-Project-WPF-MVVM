                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFB79FC8"/>
                        <GradientStop Color="#FF099FFF" Offset="1"/>
                        <GradientStop Color="#FF012034" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <TextBox 
